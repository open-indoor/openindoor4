:80 {

    log {
        level DEBUG
        format json
    }

    handle_errors {
        @404 {
            expression {http.error.status_code} == 404
        }
        respond @404 "File not found."
    }

    handle_path /geojson/data/* {
        root * /tmp/geojson
        file_server browse
    }

    handle /geojson/* {
		reverse_proxy unix//var/run/fcgiwrap.socket {
			transport fastcgi {
		        split "/geojson/"
                env API geojson-api
                env API_DOMAIN_NAME {$API_DOMAIN_NAME}
			}
		}
    }

}