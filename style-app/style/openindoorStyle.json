{
  "version": 8,
  "id": "openindoor",
  "name": "openindoor",
  "center": [
    0,
    0
  ],
  "sprite": "${APP_URL}/sprite/sprite",
  "glyphs": "fonts/{fontstack}/{range}.pbf",
  "sources": {
    "none": {
      "type": "vector",
      "url": ""
    },
    "raster-tiles": {
      "type": "raster",
      "tiles": [
        "${APP_URL}/rastertiles/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 19
    },
    "building": {
      "type": "vector",
      "url": "${API_URL}/tileserver/data/__country__.json",
      "minzoom": $BUILDING_MIN_ZOOM,
      "maxzoom": $BUILDING_MAX_ZOOM
    },
    "shape": {
      "type": "vector",
      "url": "${API_URL}/tileserver/data/__country__.json",
      "minzoom": $SHAPE_MIN_ZOOM,
      "maxzoom": $SHAPE_MAX_ZOOM
    },
    "indoor": {
      "type": "vector",
      "url": "${API_URL}/tileserver/data/__country__.json",
      "minzoom": $INDOOR_MIN_ZOOM
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#8f6c6c"
      }
    },
    {
      "id": "simple-tiles",
      "type": "raster",
      "source": "raster-tiles",
      "minzoom": 0,
      "maxzoom": 20,
      "raster-opacity": [
        "interpolate",
        [
          "linear"
        ],
        [
          "zoom"
        ],
        $RASTER_FULL_ZOOM,
        1,
        $RASTER_INVISIBLE_ZOOM,
        0
      ]
    }
  ]
}